
{
  "C_Cpp.clang_format_style": "file",
  "C_Cpp.clang_format_fallbackStyle": "LLVM",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "xaver.clang-format",
  "[c]": {
      "editor.defaultFormatter": "xaver.clang-format"
  },
  "[cpp]": {
      "editor.defaultFormatter": "xaver.clang-format"
  },
  "clang-format.executable": "/usr/bin/clang-format",
  "files.associations": {
      "p_type.h": "c",
      "common_type.h": "c",
      "stdbool.h": "c",
      "ring_buffer.h": "c"
  }, 

  "actionButtons": {
    "defaultColor": "#FFFFFF",
    "loadNpmCommands": false,
    "commands": [
      {
        "name": "Build",
        "color": "yellow",
        "terminalName": "Project Terminal",
        "ignoreClear": true,
        "command": "make --no-print-directory -C app/ BUILD_TYPE=dev BUILD_LOCAL=true"
      },
      {
        "name": "Rebuild",
        "color": "yellow",
        "terminalName": "Project Terminal",
        "ignoreClear": true,
        "command": "make --no-print-directory -C app/ rebuild BUILD_TYPE=dev BUILD_LOCAL=true"
      },
      {
        "name": "Clean",
        "color": "yellow",
        "terminalName": "Project Terminal",
        "ignoreClear": true,
        "command": "make --no-print-directory -C app/ clean BUILD_TYPE=dev BUILD_LOCAL=true"
      },
      {
        "name": "Run",
        "color": "green",
        "terminalName": "Project Terminal",
        "ignoreClear": true,
        "command": "make --no-print-directory -C app/ run BUILD_TYPE=dev BUILD_LOCAL=true"
      },
    ]
  }
}

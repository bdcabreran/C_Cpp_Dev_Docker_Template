{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch App",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/app/build/app",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/app/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build app"
        }
    ]
}
